<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondoNum">

    <TextView
        android:id="@+id/n"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/n"
        android:layout_marginLeft="120dp"
        android:textSize="40sp"
        android:textColor="@android:color/holo_green_light"
        android:textAllCaps="false"
        android:textStyle="normal|bold" />
    <TextView
        android:id="@id/u"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/u"
        android:layout_marginLeft="175dp"
        android:textSize="40sp"
        android:textColor="?android:attr/colorMultiSelectHighlight"
        android:textAllCaps="false"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/e"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/e"
        android:layout_marginLeft="285dp"
        android:textSize="40sp"
        android:textColor="@android:color/holo_purple"
        android:textAllCaps="false"
        android:textStyle="normal|bold" />
    <TextView
        android:id="@+id/r"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/r"
        android:layout_marginLeft="335dp"
        android:textSize="40sp"
        android:textColor="@android:color/holo_orange_dark"
        android:textAllCaps="false"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/o"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/o"
        android:layout_marginLeft="390dp"
        android:textSize="40sp"
        android:textColor="#795548"
        android:textAllCaps="false"
        android:textStyle="normal|bold" />
    <TextView
        android:id="@+id/s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/s"
        android:layout_marginLeft="450dp"
        android:textSize="40sp"
        android:textColor="@android:color/holo_green_light"
        android:textAllCaps="false"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/m"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/m"
        android:layout_marginLeft="20dp"
        android:textSize="40sp"
        android:textColor="@color/colorAccent"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/u"
        android:layout_toEndOf="@+id/u"
        android:textAllCaps="false"
        android:textStyle="normal|bold" />


    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:columnCount="7"
        android:rowCount="5"
        android:layout_below="@+id/e">

        <Button
            android:id="@+id/n1"
            android:layout_column="0"
            android:layout_row="0"
            android:background="@drawable/boton_redondo"
            android:text="1"
            android:backgroundTint="@android:color/white"
            android:elevation="0dp"
            android:textStyle="normal|bold"
            android:textSize="30sp"
            android:textColor="@android:color/holo_green_dark"
            android:layout_marginTop="10dp" />
        <Space
            android:layout_row="0"
            android:layout_column="1"
            android:layout_rowSpan="5"
            android:layout_width="20dp" />
        <Button
            android:id="@+id/n2"
            android:layout_row="0"
            android:background="@drawable/boton_redondo"
            android:text="2"
            android:layout_column="2"
            android:textSize="30sp"
            android:textStyle="normal|bold"
            android:textColor="@android:color/holo_red_dark"
            android:layout_marginTop="10dp" />

        <Space
            android:layout_row="0"
            android:layout_column="3"
            android:layout_rowSpan="5"
            android:layout_width="20dp" />

        <Button
            android:id="@+id/n3"
            android:layout_row="0"
            android:background="@drawable/boton_redondo"
            android:text="3"
            android:layout_column="4"
            android:textSize="30sp"
            android:textStyle="normal|bold"
            android:textColor="@android:color/holo_purple"
            android:layout_marginTop="10dp" />

        <Space
            android:layout_row="0"
            android:layout_column="5"
            android:layout_rowSpan="5"
            android:layout_width="20dp" />

        <Button
            android:id="@+id/n4"
            android:layout_row="0"
            android:background="@drawable/boton_redondo"
            android:text="4"
            android:layout_column="6"
            android:textSize="30sp"
            android:textStyle="normal|bold"
            android:textColor="@android:color/holo_orange_dark"
            android:layout_marginTop="10dp" />

        <Space
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columSpan="7"
            android:layout_height="30dp" />


        <Button
            android:id="@+id/n5"
            android:layout_row="2"
            android:background="@drawable/boton_redondo"
            android:text="5"
            android:layout_column="0"
            android:textStyle="normal|bold"
            android:textSize="30sp"
            android:textColor="#795548" />

        <Button
            android:id="@+id/n6"
            android:layout_row="2"
            android:background="@drawable/boton_redondo"
            android:text="6"
            android:layout_column="2"
            android:textSize="30sp"
            android:textStyle="normal|bold"
            android:textColor="@android:color/holo_green_dark" />



        <Space
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columspan="7"

            android:layout_height="30dp" />


        <Button
            android:id="@+id/n7"
            android:layout_row="2"
            android:background="@drawable/boton_redondo"
            android:text="7"
            android:layout_column="4"
            android:textSize="30sp"
            android:textStyle="normal|bold"
            android:textColor="@color/colorPrimary" />

        <Button
            android:id="@+id/n8"
            android:layout_row="2"
            android:background="@drawable/boton_redondo"
            android:text="8"
            android:layout_column="6"
            android:textStyle="normal|bold"
            android:textSize="30sp"
            android:textColor="@android:color/holo_purple" />

        <Button
            android:id="@+id/n9"
            android:layout_row="4"
            android:background="@drawable/boton_redondo"
            android:text="9"
            android:layout_column="2"
            android:textSize="30sp"
            android:textStyle="normal|bold"
            android:textColor="#FF5722" />

        <Button
            android:id="@+id/n10"
            android:layout_row="4"
            android:background="@drawable/boton_redondo"
            android:text="10"
            android:layout_column="4"
            android:textSize="30sp"
            android:textStyle="normal|bold"
            android:textColor="@android:color/holo_red_dark" />






    </GridLayout>

</RelativeLayout>