<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/inicio">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ยก HOLA !"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textSize="50sp"
        android:textColor="@android:color/background_light"
        android:layout_marginLeft="200dp"
        />

    <Button
        android:id="@+id/letras"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="80dp"
        android:drawableLeft="@drawable/angular"
        android:text="@string/letras"
        android:textColor="?attr/colorAccent"
        android:backgroundTint="@android:color/background_light"
        android:layout_marginRight="190dp"
        android:textStyle="normal|bold"
        android:background="@android:color/background_light"
        android:drawableTint="@color/colorAccent"
        android:layout_width="150dp" />
    <Button
        android:id="@+id/numeros"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="350dp"
        android:drawableLeft="@drawable/numeric"
        android:text="@string/numeros"
        android:textColor="@android:color/holo_purple"
        android:backgroundTint="@android:color/background_light"
        android:textStyle="normal|bold"
        android:layout_marginRight="0dp"
        android:background="@android:color/background_light"
        android:drawableTint="@android:color/holo_purple"
        android:layout_width="150dp" />

    <Button
        android:id="@+id/animales"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="350dp"
        android:drawableLeft="@drawable/panda"
        android:text="@string/animal"
        android:textColor="@android:color/holo_orange_dark"
        android:backgroundTint="@android:color/background_light"

        android:textStyle="normal|bold"
        android:layout_marginRight="0dp"
        android:background="@android:color/background_light"
        android:drawableTint="@android:color/holo_orange_dark"
        android:layout_width="150dp" />
    <Button
        android:id="@+id/musica"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="80dp"
        android:drawableLeft="@drawable/guitar"
        android:text="@string/musica"
        android:textColor="@android:color/holo_blue_dark"
        android:backgroundTint="@android:color/background_light"
        android:layout_marginRight="190dp"
        android:textStyle="normal|bold"
        android:background="@android:color/background_light"
        android:drawableTint="@android:color/holo_blue_dark"
        android:layout_width="150dp" />
    <Button
        android:id="@+id/colores"
        android:layout_height="wrap_content"
        android:layout_marginTop="220dp"
        android:layout_marginLeft="350dp"
        android:drawableLeft="@drawable/boli"
        android:text="@string/colores"
        android:textColor="@android:color/holo_green_dark"
        android:backgroundTint="@android:color/background_light"

        android:textStyle="normal|bold"
        android:background="@android:color/background_light"
        android:drawableTint="@android:color/holo_green_dark"
        android:layout_width="150dp" />

    <Button
        android:id="@+id/frutas"
        android:layout_height="wrap_content"
        android:text="@string/frutas"
        android:textColor="@android:color/holo_red_dark"
        android:backgroundTint="@android:color/background_light"
        android:drawableLeft="@drawable/food"
        android:textStyle="normal|bold"
        android:layout_alignBaseline="@+id/animales"
        android:layout_alignBottom="@+id/animales"
        android:layout_alignLeft="@+id/musica"
        android:layout_alignStart="@+id/musica"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:background="@android:color/background_light"
        android:drawableTint="@android:color/holo_red_dark"
        android:layout_width="150dp" />

</RelativeLayout>