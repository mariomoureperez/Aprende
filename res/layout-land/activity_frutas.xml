<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/bananas">

    <TextView
        android:id="@+id/f"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="F"
        android:layout_marginLeft="30dp"
        android:textSize="40sp"
        android:textColor="@android:color/holo_purple"
        android:textAllCaps="false"
        android:textStyle="normal|bold" />
    <TextView
        android:id="@id/y"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/r"
        android:layout_marginLeft="30dp"
        android:textSize="40sp"
        android:textColor="?android:attr/colorMultiSelectHighlight"
        android:textAllCaps="false"
        android:textStyle="normal|bold"
        android:layout_marginTop="50dp" />

    <TextView
        android:id="@+id/u"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="U"
        android:layout_marginLeft="30dp"
        android:textSize="40sp"
        android:textColor="@android:color/holo_red_dark"
        android:textAllCaps="false"
        android:textStyle="normal|bold"
        android:layout_marginTop="100dp" />
    <TextView
        android:id="@+id/t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="T"
        android:layout_marginLeft="30dp"
        android:textSize="40sp"
        android:textColor="@android:color/holo_orange_dark"
        android:textAllCaps="false"
        android:textStyle="normal|bold"
        android:layout_marginTop="150dp" />

    <TextView
        android:id="@+id/a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A"
        android:layout_marginLeft="30dp"
        android:textSize="40sp"
        android:textColor="@color/colorAccent"
        android:textAllCaps="false"
        android:textStyle="normal|bold"
        android:layout_marginTop="200dp" />
    <TextView
        android:id="@+id/s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/s"
        android:layout_marginLeft="30dp"
        android:textSize="40sp"

        android:textAllCaps="false"
        android:textStyle="normal|bold"
        android:textColor="@android:color/holo_orange_dark"
        android:layout_marginTop="240dp" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="7"
        android:rowCount="5"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="31dp"
        android:layout_marginEnd="31dp">

        <Button
            android:id="@+id/manzana"
            android:layout_column="0"
            android:layout_row="0"
            android:elevation="0dp"
            android:textStyle="normal|bold"
            android:textSize="30sp"
            android:textColor="@android:color/holo_green_dark"
            android:layout_marginTop="10dp"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:background="@drawable/mazan" />
        <Space
            android:layout_row="0"
            android:layout_column="1"
            android:layout_rowSpan="5"
            android:layout_width="20dp" />
        <Button
            android:id="@+id/platano"
            android:layout_row="0"
            android:background="@drawable/banana"
            android:layout_column="2"
            android:textSize="30sp"
            android:textStyle="normal|bold"
            android:textColor="@android:color/holo_red_dark"
            android:layout_marginTop="10dp"
            android:layout_width="100dp"
            android:layout_height="80dp" />

        <Space
            android:layout_row="0"
            android:layout_column="3"
            android:layout_rowSpan="5"
            android:layout_width="20dp" />

        <Button
            android:id="@+id/n3"
            android:layout_row="0"
            android:background="@drawable/pera"
            android:layout_column="4"
            android:textSize="30sp"
            android:textStyle="normal|bold"
            android:textColor="@android:color/holo_purple"
            android:layout_marginTop="10dp"
            android:layout_width="100dp"
            android:layout_height="80dp" />

        <Space
            android:layout_row="0"
            android:layout_column="5"
            android:layout_rowSpan="5"
            android:layout_width="20dp" />

        <Button
            android:id="@+id/sandia"
            android:layout_row="0"
            android:background="@drawable/sandia"
            android:layout_column="6"
            android:textSize="30sp"
            android:textStyle="normal|bold"
            android:textColor="@android:color/holo_orange_dark"
            android:layout_marginTop="10dp"
            android:layout_width="100dp"
            android:layout_height="80dp" />

        <Space
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="7"
            android:layout_height="10dp" />


        <Button
            android:id="@+id/kiwi"
            android:layout_row="2"
            android:background="@drawable/kiwi"
            android:layout_column="0"
            android:textStyle="normal|bold"
            android:textSize="30sp"
            android:textColor="#795548"
            android:layout_width="100dp"
            android:layout_height="80dp" />

        <Button
            android:id="@+id/melon"
            android:layout_row="2"
            android:background="@drawable/melon"
            android:layout_column="2"
            android:textSize="30sp"
            android:textStyle="normal|bold"
            android:textColor="@android:color/holo_green_dark"
            android:layout_width="100dp"
            android:layout_height="80dp" />



        <Space
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnSpan="7"

            android:layout_height="10dp" />


        <Button
            android:id="@+id/fresa"
            android:layout_row="2"
            android:background="@drawable/fresa"
            android:layout_column="4"
            android:textSize="30sp"
            android:textStyle="normal|bold"
            android:textColor="@color/colorPrimary"
            android:layout_width="100dp"
            android:layout_height="80dp" />

        <Button
            android:id="@+id/pina"
            android:layout_row="2"
            android:background="@drawable/pina"
            android:layout_column="6"
            android:textStyle="normal|bold"
            android:textSize="30sp"
            android:textColor="@android:color/holo_purple"
            android:layout_width="100dp"
            android:layout_height="80dp" />

        <Button
            android:id="@+id/uva"
            android:layout_row="4"
            android:background="@drawable/uva"
            android:layout_column="0"
            android:textSize="30sp"
            android:textStyle="normal|bold"
            android:textColor="#FF5722"
            android:layout_width="100dp"
            android:layout_height="80dp" />

        <Button
            android:id="@+id/cereza"
            android:layout_row="4"
            android:background="@drawable/cereza"
            android:layout_column="2"
            android:textSize="30sp"
            android:textStyle="normal|bold"
            android:textColor="#FF5722"
            android:layout_width="100dp"
            android:layout_height="80dp" />

        <Button
            android:id="@+id/naranja"
            android:layout_row="4"
            android:background="@drawable/naranja"
            android:layout_column="4"
            android:textSize="30sp"
            android:textStyle="normal|bold"
            android:textColor="@android:color/holo_red_dark"
            android:layout_width="100dp"
            android:layout_height="80dp" />

        <Button
            android:id="@+id/limon"
            android:layout_row="4"
            android:background="@drawable/limon"
            android:layout_column="6"
            android:textSize="30sp"
            android:textStyle="normal|bold"
            android:textColor="#FF5722"
            android:layout_width="100dp"
            android:layout_height="80dp" />






    </GridLayout>

</RelativeLayout>