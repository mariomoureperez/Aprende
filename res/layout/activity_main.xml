<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mario.aprender.MainActivity"
    android:background="@drawable/inicio">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ยก HOLA !"
        android:textStyle="normal|bold"
        android:textAlignment="center"
        android:textSize="60sp"
        android:textColor="@android:color/background_light"
        android:layout_marginLeft="50dp" />

    <Button
        android:id="@+id/letras"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="10dp"
        android:drawableLeft="@drawable/a"
        android:drawableTint="?android:attr/colorControlActivated"
        android:drawablePadding="8dp"
        android:text="@string/letras"
        android:textColor="?android:attr/colorControlActivated"
        android:backgroundTint="@android:color/white"
        android:layout_marginRight="190dp"
        android:textStyle="normal|bold"
        android:layout_width="400dp"
        android:layout_height="55dp" />
    <Button
        android:id="@+id/numeros"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="190dp"
        android:drawableLeft="@drawable/numeric"
        android:drawablePadding="8dp"
        android:text="@string/numeros"
        android:textColor="@android:color/holo_purple"
        android:backgroundTint="@android:color/background_light"
        android:textStyle="normal|bold"
        android:layout_marginRight="0dp"
        android:drawableTint="@android:color/holo_purple" />
    <Button
        android:id="@+id/cosas"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="10dp"
        android:text="@string/cosas"
        android:textColor="@android:color/holo_red_dark"
        android:backgroundTint="@android:color/background_light"
        android:drawableLeft="@drawable/food"
        android:drawablePadding="8dp"
        android:layout_marginRight="190dp"
        android:textStyle="normal|bold"
        android:drawableTint="@android:color/holo_red_dark" />
    <Button
        android:id="@+id/animales"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:layout_marginLeft="190dp"
        android:drawableLeft="@drawable/panda"
        android:drawablePadding="8dp"
        android:text="@string/animal"
        android:textColor="@android:color/holo_orange_dark"
        android:backgroundTint="@android:color/background_light"

        android:textStyle="normal|bold"
        android:layout_marginRight="0dp"
        android:drawableTint="@android:color/holo_orange_dark" />
    <Button
        android:id="@+id/musica"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="10dp"
        android:drawableLeft="@drawable/guitar"
        android:drawablePadding="8dp"
        android:text="@string/musica"
        android:textColor="@android:color/holo_blue_dark"
        android:backgroundTint="@android:color/background_light"
        android:layout_marginRight="190dp"
        android:textStyle="normal|bold"
        android:drawableTint="@android:color/holo_blue_dark" />
    <Button
        android:id="@+id/colores"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:layout_marginLeft="190dp"
        android:drawableLeft="@drawable/boli"
        android:drawablePadding="8dp"
        android:text="@string/colores"
        android:textColor="@android:color/holo_green_dark"
        android:backgroundTint="@android:color/background_light"

        android:textStyle="normal|bold"
        android:drawableTint="@android:color/holo_green_dark" />
</RelativeLayout>
