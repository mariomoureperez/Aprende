<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_frutas"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mario.aprender.Frutas"
    android:background="@drawable/bananas">

    <TextView
        android:id="@+id/f"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="F"
        android:layout_marginLeft="30dp"
        android:textSize="40sp"
        android:textColor="@android:color/holo_purple"
        android:textAllCaps="false"
        android:textStyle="normal|bold" />
    <TextView
        android:id="@+id/y"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/r"
        android:layout_marginLeft="80dp"
        android:textSize="40sp"
        android:textColor="?android:attr/colorMultiSelectHighlight"
        android:textAllCaps="false"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/u"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="U"
        android:layout_marginLeft="130dp"
        android:textSize="40sp"
        android:textColor="@android:color/holo_red_dark"
        android:textAllCaps="false"
        android:textStyle="normal|bold" />
    <TextView
        android:id="@+id/t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="T"
        android:layout_marginLeft="180dp"
        android:textSize="40sp"
        android:textColor="@android:color/holo_orange_dark"
        android:textAllCaps="false"
        android:textStyle="normal|bold" />

    <TextView
        android:id="@+id/a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A"
        android:layout_marginLeft="220dp"
        android:textSize="40sp"
        android:textColor="@color/colorAccent"
        android:textAllCaps="false"
        android:textStyle="normal|bold" />
    <TextView
        android:id="@+id/s"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/s"
        android:layout_marginLeft="260dp"
        android:textSize="40sp"

        android:textAllCaps="false"
        android:textStyle="normal|bold"
        android:textColor="@android:color/holo_orange_dark" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:columnCount="5"
        android:rowCount="7"
        android:layout_marginTop="100dp">

        <Button
            android:id="@+id/manzana"
            android:layout_column="0"
            android:layout_row="0"
            android:background="@drawable/mazan"
            android:elevation="0dp"
            android:textStyle="normal|bold"
            android:textSize="30sp"
            android:layout_height="80dp"
            android:visibility="visible"
            android:layout_width="100dp" />
        <Space
            android:layout_row="0"
            android:layout_column="1"
            android:layout_rowSpan="7"
            android:layout_width="10dp" />
        <Button
            android:id="@+id/platano"
            android:layout_row="0"
            android:background="@drawable/platano"
            android:layout_column="2"
            android:textSize="30sp"
            android:textStyle="normal|bold"
            android:textColor="@android:color/holo_red_dark"
            android:layout_height="80dp"
            android:layout_width="100dp" />

        <Space
            android:layout_row="0"
            android:layout_column="3"
            android:layout_rowSpan="7"
            android:layout_width="10dp" />

        <Button
            android:id="@+id/pera"
            android:layout_row="0"
            android:background="@drawable/pera"
            android:layout_column="4"
            android:textSize="30sp"
            android:textStyle="normal|bold"
            android:textColor="@android:color/holo_purple"
            android:layout_height="80dp"
            android:layout_width="100dp" />

        <Space
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="5"
            android:layout_height="10dp" />

        <Button
            android:id="@+id/sandia"
            android:layout_row="2"
            android:background="@drawable/sandia"
            android:layout_column="0"
            android:textSize="30sp"
            android:textStyle="normal|bold"
            android:textColor="@android:color/holo_orange_dark"
            android:layout_width="100dp"
            android:layout_height="80dp" />

        <Button
            android:id="@+id/melon"
            android:layout_row="2"
            android:background="@drawable/melon"
            android:layout_column="2"
            android:textStyle="normal|bold"
            android:textSize="30sp"
            android:textColor="#795548"
            android:layout_width="100dp"
            android:layout_height="80dp" />

        <Button
            android:id="@+id/fresa"
            android:layout_row="2"
            android:background="@drawable/fresa"
            android:layout_column="4"
            android:textSize="30sp"
            android:textStyle="normal|bold"
            android:textColor="@android:color/holo_green_dark"
            android:layout_width="100dp"
            android:layout_height="80dp" />

        <Space
            android:layout_row="3"
            android:layout_column="0"
            android:layout_columnSpan="5"
            android:layout_height="10dp" />

        <Space
            android:layout_row="5"
            android:layout_column="0"
            android:layout_columnSpan="5"

            android:layout_height="10dp" />


        <Button
            android:id="@+id/pina"
            android:layout_row="4"
            android:background="@drawable/pina"
            android:layout_column="0"
            android:textSize="30sp"
            android:textStyle="normal|bold"
            android:textColor="@color/colorPrimary"
            android:layout_width="100dp"
            android:layout_height="80dp" />

        <Button
            android:id="@+id/kiwi"
            android:layout_row="4"
            android:background="@drawable/kiwi"
            android:layout_column="2"
            android:textStyle="normal|bold"
            android:textSize="30sp"
            android:textColor="@android:color/holo_purple"
            android:layout_width="100dp"
            android:layout_height="80dp" />

        <Button
            android:id="@+id/uva"
            android:layout_row="4"
            android:background="@drawable/uva"
            android:layout_column="4"
            android:textSize="30sp"
            android:textStyle="normal|bold"
            android:textColor="#FF5722"
            android:layout_width="100dp"
            android:layout_height="80dp" />

        <Button
            android:id="@+id/cereza"
            android:layout_row="6"
            android:background="@drawable/cereza"
            android:layout_column="0"
            android:textSize="30sp"
            android:textStyle="normal|bold"
            android:textColor="@android:color/holo_red_dark"
            android:layout_width="100dp"
            android:layout_height="80dp" />

        <Button
            android:id="@+id/naranja"
            android:layout_row="6"
            android:background="@drawable/naranja"
            android:layout_column="2"
            android:textSize="30sp"
            android:textStyle="normal|bold"
            android:textColor="@android:color/holo_red_dark"
            android:layout_width="100dp"
            android:layout_height="80dp" />

        <Button
            android:id="@+id/limon"
            android:layout_row="6"
            android:background="@drawable/limon"
            android:layout_column="4"
            android:textSize="30sp"
            android:textStyle="normal|bold"
            android:textColor="@android:color/holo_red_dark"
            android:layout_width="100dp"
            android:layout_height="80dp" />






    </GridLayout>

</RelativeLayout>
